@model IEnumerable<ResumeApp.Models.ApplicationRole>

@*@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@
<style>
</style>
<h2 class="well text-center">Liste des roles </h2>

<p>
    <a href="@Url.Action("Create","Roles")" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus-sign"></span>Nouveau
    </a>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nom")
        </th>
        <th>
            @Html.DisplayName("Description")
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name )
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@

                <a href="@Url.Action("Edit","Roles",new { id = item.Id })" class="btn btn-primary">
                    <span class="glyphicon glyphicon-edit"></span>Modifier
                </a>
                <a href="@Url.Action("Details","Roles",new { id = item.Id})" class="btn btn-primary">
                    <span class="glyphicon glyphicon-sunglasses"></span>Details
                </a>
                <a href="@Url.Action("Delete","Roles",new { id = item.Id })" class="btn btn-primary">
                    <span class="glyphicon glyphicon-trash"></span>Supprimer
                </a>
            </td>
        </tr>
    }

</table>
