
@model ResumeApp.Models.Profile
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nom Complet")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>
            @Html.DisplayName("Téléphone")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayName("Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayName("Langues")
        </dt>
        <dd>
            @foreach (var item in Model.Languages)
            {
                <button class="btn btn-sm"> @item.Text</button>
            }
        </dd>
        <br />
        <dt>
            @Html.DisplayName("Pays")
        </dt>

        <dd>
            @foreach (var item in Model.Countries)
            {
                <button class="btn btn-sm"> @item.Text</button>
            }
        </dd>
        <br />
        <dt>
            @Html.DisplayName("Outils")
        </dt>

        <dd>
            @foreach (var item in Model.Tools)
            {
                <button class="btn btn-sm"> @item.Text</button>
            }
        </dd>
        <br />
        <dt>
            @Html.DisplayName("Compétences")
        </dt>

        <dd>
            @foreach (var item in Model.Skills)
            {
                <button class="btn btn-sm"> @item.Text</button>
            }
        </dd>
        <br />
        <dt>
            @Html.DisplayName("Titres")
        </dt>

        <dd>
            @foreach (var item in Model.Titles)
            {
                <button class="btn btn-sm"> @item.Text</button>
            }
        </dd>
    </dl>
</div>

