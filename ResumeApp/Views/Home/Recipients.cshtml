
@using PagedList;

@using PagedList.Mvc;

@model IPagedList<ResumeApp.Models.ApplicationUser>

<script src="~/Content/iCheck/icheck.js"></script>
<link href="~/Content/iCheck/flat/flat.css" rel="stylesheet" />
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nom")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th> Principale </th>
        <th> En CC </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td id="users">
                @Html.CheckBox(item.Email, new { id = "usersCheck" })
            </td>
            <td id="ccsUsers">
                @Html.CheckBox(item.Email, new { id = "ccsusersCheck" })
            </td>
        </tr>
    }

</table>
