@model ResumeApp.Models.Helpers.FileModel

@{
    ViewBag.Title = "UpploadFiles";
}
<div class="alert alert-danger" role="alert" style="margin:15px">
    Upload CVs
</div>

@using (Html.BeginForm("UploadFiles", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>FileModel</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.files, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.files, "", new { @type = "file", @multiple = "multiple" })
                @Html.ValidationMessageFor(model => model.files, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload" class="btn btn-primary" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-success">
                @ViewBag.UploadStatus
            </div>
        </div>
    </div>
}
<div style="margin:15px">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Files</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.files)
            {

                <tr>
                    <td>@item</td>
                    <td>
                        <a href="#" class="btn btn-primary" id="@item" onclick="removeFile(this.id)"><span class="glyphicon glyphicon-remove"></span>Supprimer</a>
                        @Html.ActionLink("Download", "Download", new { id = item.Substring(0,item.IndexOf('.')) }, new { @class = "btn btn-primary" })
                        @*@Html.ActionLink("View", "Index", "Home", new { @class = "btn btn-primary" })*@
                        @*@Html.ActionLink("Manual Extract", "Index", "Home", new { name = item }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Automatic Extract", "Index", "Home", new { @class = "btn btn-primary" })*@
                        <a href="#" class="btn btn-primary" data-target="#detailsModal" data-toggle="modal" id="@item" onclick="Details(this.id)"><span class="glyphicon glyphicon-sunglasses"></span>Détails</a>
                        <button class="btn btn-primary" id="vv" data-toggle="modal" data-target="#myModal" onclick="setSource('\'@item\'')">
                            View File
                        </button>
                        @*<button class="btn btn-primary"  onclick="saveFile()">
            download File
        </button>*@

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="myModalLabel">Modal title</h4>
            </div>
            <div class="modal-body">
                <div style="text-align: center;">
                    <iframe src="http://docs.google.com/gview?url=http://www.pdf995.com/samples/pdf.pdf&embedded=true" style="width:500px; height:500px;" frameborder="0" id="frima"></iframe>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveFile()">Save file</button>
            </div>
        </div>
    </div>
</div>



