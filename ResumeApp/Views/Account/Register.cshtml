@model ResumeApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2 style="margin:15px"  class="alert alert-danger">Nouveau Utilisateur</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
<div class="row" style="margin:15px">

    <div class="col-md-6">
        <h4>Créer un nouveau compte.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Nom Complet", new { @class = "col-md-4 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control col-md-8" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Email", new { @class = "col-md-4 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-md-4" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Mot de Passe", new { @class = "col-md-4 control-label" })
            <div class="col-md-6">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-4" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Confirmer mot de passe", new { @class = "col-md-4 control-label" })
            <div class="col-md-6">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-md-4" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"></div>
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" class="btn btn-primary" value="Enregister" />
            </div>
        </div>

    </div>
    <div class="col-md-6">

    </div>


</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
